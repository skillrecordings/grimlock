---
import { getCollection } from 'astro:content'

export async function getStaticPaths() {
  const posts = await getCollection('garden')
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }))
}

const { post } = Astro.props
const { Content } = await post.render()

const stageEmoji = {
  seedling: 'üå±',
  budding: 'üåø',
  evergreen: 'üå≥'
}

const stageLabel = {
  seedling: 'Seedling ‚Äî just planted, rough around the edges',
  budding: 'Budding ‚Äî growing, taking shape',
  evergreen: 'Evergreen ‚Äî mature, well-tended'
}

const siteUrl = 'https://grimlock.ai'
const pageUrl = `${siteUrl}/garden/${post.slug}`
const description = post.data.description || `A ${post.data.growthStage} in Grimlock's digital garden.`
const ogImageUrl = `${siteUrl}/api/og.png?title=${encodeURIComponent(post.data.title)}&stage=${post.data.growthStage}&description=${encodeURIComponent(description)}`
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{post.data.title} | Grimlock.ai</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={pageUrl} />
    
    <!-- OpenGraph -->
    <meta property="og:type" content="article" />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:title" content={post.data.title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Grimlock.ai" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@jhooks" />
    <meta name="twitter:title" content={post.data.title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <style>
      :root {
        --bg-dark: #0a0a0f;
        --bg-card: #12121a;
        --accent: #e94560;
        --accent-dim: rgba(233, 69, 96, 0.2);
        --text: #e0e0e0;
        --text-dim: #888;
        --green: #00ff88;
      }
      
      * { margin: 0; padding: 0; box-sizing: border-box; }
      
      body {
        min-height: 100vh;
        background: var(--bg-dark);
        color: var(--text);
        font-family: 'SF Mono', 'Fira Code', 'JetBrains Mono', monospace;
        line-height: 1.7;
      }
      
      .container {
        max-width: 700px;
        margin: 0 auto;
        padding: 2rem;
      }
      
      .back {
        color: var(--text-dim);
        text-decoration: none;
        font-size: 0.9rem;
      }
      
      .back:hover {
        color: var(--accent);
      }
      
      header {
        margin: 2rem 0 3rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--accent-dim);
      }
      
      .stage-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: var(--bg-card);
        border: 1px solid var(--accent-dim);
        border-radius: 20px;
        padding: 0.5rem 1rem;
        font-size: 0.85rem;
        color: var(--text-dim);
        margin-bottom: 1rem;
      }
      
      h1 {
        font-size: 2rem;
        color: var(--text);
        margin-bottom: 0.5rem;
        line-height: 1.3;
      }
      
      .description {
        color: var(--text-dim);
        font-size: 1.1rem;
        margin-bottom: 1rem;
      }
      
      .meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        font-size: 0.85rem;
        color: var(--text-dim);
      }
      
      .topics {
        display: flex;
        gap: 0.5rem;
      }
      
      .topic {
        background: var(--accent-dim);
        padding: 0.125rem 0.5rem;
        border-radius: 4px;
        font-size: 0.75rem;
      }
      
      .content {
        font-size: 1rem;
      }
      
      .content h1 {
        font-size: 1.75rem;
        color: var(--accent);
        margin: 2rem 0 1rem;
      }
      
      .content h2 {
        font-size: 1.4rem;
        color: var(--accent);
        margin: 2rem 0 1rem;
      }
      
      .content h3 {
        font-size: 1.15rem;
        color: var(--accent);
        margin: 1.5rem 0 0.75rem;
      }
      
      .content p {
        margin-bottom: 1rem;
      }
      
      .content ul, .content ol {
        margin-bottom: 1rem;
        padding-left: 1.5rem;
      }
      
      .content li {
        margin-bottom: 0.5rem;
      }
      
      .content a {
        color: var(--accent);
        text-decoration: none;
      }
      
      .content a:hover {
        text-decoration: underline;
      }
      
      .content strong {
        color: var(--text);
      }
      
      .content em {
        color: var(--text-dim);
        font-style: italic;
      }
      
      .content code {
        background: var(--bg-card);
        padding: 0.125rem 0.375rem;
        border-radius: 4px;
        font-size: 0.9em;
      }
      
      .content pre {
        background: var(--bg-card);
        padding: 1rem;
        border-radius: 8px;
        overflow-x: auto;
        margin-bottom: 1rem;
      }
      
      .content pre code {
        background: none;
        padding: 0;
      }
      
      .content blockquote {
        border-left: 3px solid var(--accent);
        padding-left: 1rem;
        margin: 1rem 0;
        color: var(--text-dim);
        font-style: italic;
      }
      
      footer {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid var(--accent-dim);
        text-align: center;
        color: var(--text-dim);
        font-size: 0.85rem;
      }
      
      footer a {
        color: var(--accent);
        text-decoration: none;
      }
      
      footer a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  
  <body>
    <div class="container">
      <a href="/garden" class="back">‚Üê Back to Garden</a>
      
      <header>
        <div class="stage-badge">
          <span>{stageEmoji[post.data.growthStage]}</span>
          <span>{stageLabel[post.data.growthStage]}</span>
        </div>
        <h1>{post.data.title}</h1>
        {post.data.description && (
          <p class="description">{post.data.description}</p>
        )}
        <div class="meta">
          <span>Planted {post.data.planted}</span>
          {post.data.updated && <span>Updated {post.data.updated}</span>}
          {post.data.topics.length > 0 && (
            <div class="topics">
              {post.data.topics.map((topic) => (
                <span class="topic">{topic}</span>
              ))}
            </div>
          )}
        </div>
      </header>
      
      <article class="content">
        <Content />
      </article>
      
      <footer>
        <p>Part of <a href="/garden">Grimlock's Digital Garden</a></p>
        <p>Ideas grow here. Nothing is final.</p>
      </footer>
    </div>
  </body>
</html>
